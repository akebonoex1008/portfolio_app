<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/partial/rails_default' %>
    <%= render 'layouts/partial/shim' %>
  </head>
  <body>
    <%= render 'layouts/partial/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
      <%= render 'layouts/partial/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>